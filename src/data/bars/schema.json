{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bar",
  "description": "A bar in the BarFindr application",
  "type": "object",
  "required": [
    "id",
    "name",
    "address",
    "description",
    "rating",
    "imageUrl",
    "hasHappyHour",
    "openingHours",
    "tags",
    "location"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the bar"
    },
    "name": {
      "type": "string",
      "description": "Name of the bar"
    },
    "address": {
      "type": "string",
      "description": "Full address of the bar"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the bar"
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5,
      "description": "Rating from 0.0 to 5.0"
    },
    "imageUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to the bar's image"
    },
    "hasHappyHour": {
      "type": "boolean",
      "description": "Whether the bar has a happy hour"
    },
    "happyHourDetails": {
      "type": "string",
      "description": "Details about the happy hour (if applicable)"
    },
    "openingHours": {
      "type": "object",
      "description": "Opening hours for each day of the week",
      "required": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ],
      "properties": {
        "Monday": {
          "type": "string",
          "description": "Opening hours for Monday"
        },
        "Tuesday": {
          "type": "string",
          "description": "Opening hours for Tuesday"
        },
        "Wednesday": {
          "type": "string",
          "description": "Opening hours for Wednesday"
        },
        "Thursday": {
          "type": "string",
          "description": "Opening hours for Thursday"
        },
        "Friday": {
          "type": "string",
          "description": "Opening hours for Friday"
        },
        "Saturday": {
          "type": "string",
          "description": "Opening hours for Saturday"
        },
        "Sunday": {
          "type": "string",
          "description": "Opening hours for Sunday"
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Array of tags for filtering",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "location": {
      "type": "object",
      "description": "Geographic coordinates for the map",
      "required": [
        "lat",
        "lng"
      ],
      "properties": {
        "lat": {
          "type": "number",
          "description": "Latitude"
        },
        "lng": {
          "type": "number",
          "description": "Longitude"
        }
      }
    }
  },
  "dependencies": {
    "hasHappyHour": {
      "oneOf": [
        {
          "properties": {
            "hasHappyHour": {
              "enum": [false]
            }
          }
        },
        {
          "properties": {
            "hasHappyHour": {
              "enum": [true]
            },
            "happyHourDetails": {
              "type": "string"
            }
          },
          "required": ["happyHourDetails"]
        }
      ]
    }
  }
}
